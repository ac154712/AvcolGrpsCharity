@model IEnumerable<AvcolGrpsCharity.Models.CharityGrpStaff>

@{
    ViewData["Title"] = "Index";
}

<h1>Charity Groups Staff Members</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StaffMember_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffMember_email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffMember_phonenum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SignedCharityGrps)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StaffMember_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffMember_email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StaffMember_phonenum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SignedCharityGrps.CharityGrp_description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StaffmemberID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StaffmemberID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StaffmemberID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
